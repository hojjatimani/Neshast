<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1000">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="350"
            android:background="@color/befrestRed" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="650"
            android:background="@color/befrestBademjooni" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1000">

        <!--logos-->
        <RelativeLayout
            
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="175"
            android:padding="@dimen/space_medium">

            <ImageView
                android:id="@+id/befrestIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_medium"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/befrestName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/befrestIcon"
                android:text="نشست لورم ایپسوم بفرست"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/profilePictureContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="350">

            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:onClick="onViewClicked"
                android:src="@drawable/avatar1" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="475"
            android:orientation="vertical"
            android:paddingLeft="@dimen/space_xxlarge"
            android:paddingRight="@dimen/space_xxlarge">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawablePadding="@dimen/space_large"
                android:drawableRight="@android:drawable/ic_menu_myplaces"
                android:hint="نام"
                android:padding="@dimen/space_medium"
                android:paddingRight="@dimen/space_small"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/space_small"
                android:layout_marginTop="@dimen/space_small"
                android:alpha="0.8"
                android:background="@color/gray" />


            <EditText
                android:id="@+id/organization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawablePadding="@dimen/space_large"
                android:drawableRight="@android:drawable/ic_menu_mapmode"
                android:hint="سازمان"
                android:padding="@dimen/space_medium"
                android:paddingRight="@dimen/space_small"
                android:inputType="textPersonName"
                android:textColor="@color/white"
                android:textColorHint="@color/signUpEdittextTextColor"
                android:textSize="15sp" />

            <Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="@android:dimen/app_icon_size"
                android:background="@drawable/login_box"
                android:onClick="onViewClicked"
                android:text="ارسال"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.6"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/oddrunSite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(oddrun.ir) "
            android:textColor="@color/white"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/oddrunName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="توسعه راهکارهای هوشمند آدران"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>